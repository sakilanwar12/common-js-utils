{
    "compilerOptions": {
      "target": "es2018",
      "module": "ESNext",
      "moduleResolution": "node",
      "declaration": true,
      "declarationMap": true,
      "outDir": "dist",
      "rootDir": "src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
  }